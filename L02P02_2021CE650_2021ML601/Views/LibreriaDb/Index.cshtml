@{
    <h1>Creación de Libros</h1>
    <br />
    <form>
        @*Incio del Formulario*@

        <div class="form-group row mb-4">
            <div class="col-sm-2">
                <label>Nombre del libro</label>
            </div>
            <div class="col-sm-4">
                @Html.TextBox("nombre","",new {@class="form-control"})
            </div>
            <div class="col-sm-2">
                @Html.Label("lblDescripción","Descripción")
            </div>
            <div class="col-sm-4">
                @Html.TextArea("descricpión","",new {@class="form-control"})
            </div>
        @*Fin del Formulario*@
    </form>
}
