@{
    IEnumerable<string> strList = new List<string> { "p", "j", "d", "ñ" };
    IEnumerable<string> strList2 = new List<string> { "hola", "j", "d", "ñ" };

    <h1>Creación de Libros</h1>
    <br />
    <form>
        @*Inicio del Formulario*@

        <div class="form-group row mb-4">
            <div class="col-sm-2">
                <label>Nombre del libro</label>
            </div>
            <div class="col-sm-4">
                @Html.TextBox("nombre", "", new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group row mb-4">
            <div class="col-sm-2">
                @Html.Label("lblDescripcion", "Descripción")
            </div>
            <div class="col-sm-4">
                @Html.TextArea("descripcion", "", new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group row mb-4">
            <div class="col-sm-2">
                <label>Precio</label>
            </div>
            <div class="col-sm-4">
                @Html.TextBox("precio", "", new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group row mb-4">
            <div class="col-sm-2">
                <label>Autor</label>
            </div>
            <div class="col-sm-4">
                @Html.DropDownList("autor", new SelectList(strList,
                     strList.FirstOrDefault()), "--Selecciona un autor ----")
            </div>
        </div>

        <div class="form-group row mb-4">
            <div class="col-sm-2">
                <label>Categoría</label>
            </div>
            <div class="col-sm-4">
                @Html.DropDownList("categoria", new SelectList(strList2,
                     strList2.FirstOrDefault()), "--Selecciona un autor ----")
            </div>
        </div>

        @*Fin del Formulario*@
    </form>
}
